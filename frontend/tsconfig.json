{
  "extends": "@tsconfig/vite-react/tsconfig.json",

  "compilerOptions": {
    "allowImportingTsExtensions": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "sourceMap": true,

    "types": ["vite/client"],

    "paths": {
      "@": ["./src"],
      "@/*": ["./src/*"],
      "@config": ["./config"],
      "@config/*": ["./config/*"]
    }
  },

  "include": ["src", "config"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
