  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Backend",
      "type": "node",
      "request": "launch",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}/backend",
      "skipFiles": ["<node_internals>/**", "**/node_modules/**"],
      "program": "${workspaceFolder}/backend/node_modules/.bin/tsx",
      "args": ["watch", "${workspaceFolder}/backend/src/main.ts"]
    }
  ]
}
