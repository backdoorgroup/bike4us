{
  "extends": "@tsconfig/node16/tsconfig.json",

  "include": ["./src", "./lib", "./static", "./env.d.ts"],

  "compilerOptions": {
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "emitDecoratorMetadata": true,
    "removeComments": true,

    "rootDir": ".",
    "baseUrl": ".",
    "outDir": "./dist",

    "paths": {
      "~/*": ["./src/*"],
      "@/*": ["./lib/*"]
    }
  }
}
