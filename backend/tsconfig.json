{
  "extends": "@tsconfig/node16/tsconfig.json",

  "compilerOptions": {
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "emitDecoratorMetadata": true,

    "sourceMap": true,

    "baseUrl": ".",
    "outDir": "./dist",

    "paths": {
      "~/*": ["./src/*"],
      "@/*": ["./lib/*"]
    }
  }
}
